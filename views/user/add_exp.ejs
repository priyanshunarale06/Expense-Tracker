<%- include('header.ejs') %>
    <div class="container-fluid p-0 expenses">
        <div class="row">

            <div class="col-12" id="page_title"><h6 class="mt-1"> / Add Expenses</h6></div>

            <div class="col-12" id="page_title_big"><h1 class="mt-3">Add Expenses</h1></div>

            <div class="col-12">
                <form action="/save_exp" method="post" onsubmit="return submits()">

                    <label>Date of Expense</label>
                    <div class="col-12">
                        <input type="date" name="exp_date" class="w-75 p-2" required>
                    </div>

                    <label class="mt-3">Item name</label>
                    <div class="col-12">
                        <input type="text" name="exp_item" class="w-75 p-2" required>
                    </div>

                    <label class="mt-3">Cost of Item</label>
                    <div class="col-12">
                        <input type="number" name="exp_cost" class="w-75 p-2" required>
                    </div>

                    
                    <button class="btn btn-primary mt-4">Add</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        function submits()
        {
            alert('Expenses Saved Successfully');
            return true;
        }
    </script>
<%- include('footer.ejs') %>