        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
        <div class="login_full">
          <div class="container">
            <div class="row">

                <div class="col-12 text-center mt-5">
                    <h3>Daily Expense Tracker</h3>
                </div>

                <div class="col-md-4 col-1"></div>

                <div class="col-md-4 col-10 text-center">
                    <form action="/user_login" method="post" class="login_form mb-3">
                        <h4>Log in</h4>
                        <label class="mt-4">Enter E-mail</label><br>
                        <input class="mt-2" placeholder="E-mail" type="text" name="user_mail" required><br>

                        <label class="mt-2">Enter Password</label>
                        <input class="mt-1" placeholder="Password" type="password" name="user_pass" required><br>

                        <a href="">
                            <button id="btn_login">Login</button>
                        </a>
                    </form>

                    <a href="/register">Register.</a>
                    
                </div>

                <div class="col-md-4"></div>

            </div>
          </div>
        </div>
    </body>
</html>