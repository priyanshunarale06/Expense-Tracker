<%- include('header.ejs') %>
    <div class="container-fluid p-0">
        <div class="row">

            <div class="col-12" id="page_title"><h6 class="mt-1"> / Dashboard</h6></div>

            <div class="col-12" id="page_title_big"><h1 class="mt-3">Dashboard</h1></div>

            <div class="col-md-3 col-6">
                <div class="card m-4">
                    <div class="card-header text-center">Today's Expense</div>
                    <div class="card-body text-center mt-2"><h1 class="cb-text"><%=todayt[0].todayt%></h1></div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card m-4">
                    <div class="card-header text-center">Yestarday's Expense</div>
                    <div class="card-body text-center mt-2"><h1 class="cb-text"><%=yesterdayt[0].yesterdayt%></h1></div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card m-4">
                    <div class="card-header text-center">Last 7Day's Expense</div>
                    <div class="card-body text-center mt-2"><h1 class="cb-text"><%=sevent[0].sevent%></h1></div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card m-4">
                    <div class="card-header text-center">Last 30day's Expenses</div>
                    <div class="card-body text-center mt-2"><h1 class="cb-text"><%=thirtyt[0].thirtyt%></h1></div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card m-4">
                    <div class="card-header text-center">Current Year Expenses</div>
                    <div class="card-body text-center mt-2"><h1 class="cb-text"><%=yeart[0].yeart%></h1></div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card m-4">
                    <div class="card-header text-center">Total Expenses</div>
                    <div class="card-body text-center mt-2"><h1 class="cb-text"><%=total[0].total%></h1></div>
                </div>
            </div>

        </div>
    </div>
    <script>
        var h1 = document.getElementsByTagName('h1');
        for (var i = 0; i < h1.length; i++) {
            var value = h1[i].textContent;
            if (value.trim() === "") {
                h1[i].textContent = "0";
            }
        }
    </script>
<%- include('footer.ejs') %>