
<%-include('header.ejs')%>
    <div class="container-fluid p-0 expenses">
        <div class="row">
            <div class="col-12" id="page_title"><h6 class="mt-1"> / Edit Expenses</h6></div>
            <div class="col-12" id="page_title_big"><h1 class="mt-3">Edit Expenses</h1></div>

            <div class="col-12">
                <form action="/update_exp/<%=exp_info[0].exp_id%>" method="post">

                    <label>Date of Expense</label>
                    <div class="col-12">
                        <input type="date" value="<%=exp_info[0].exp_date%>" name="exp_date" class="w-75 p-2" required>
                    </div>

                    <label class="mt-3">Item name</label>
                    <div class="col-12">
                        <input type="text" value="<%=exp_info[0].exp_item%>" name="exp_item" class="w-75 p-2" required>
                    </div>

                    <label class="mt-3">Cost of Item</label>
                    <div class="col-12">
                        <input type="number" value="<%=exp_info[0].exp_cost%>" name="exp_cost" class="w-75 p-2" required>
                    </div>

                    
                    <button class="btn btn-primary mt-4">Update</button>
                </form>
            </div>
        </div>
    </div>
<%-include('footer.ejs')%>









































































































































































































































































































































































































