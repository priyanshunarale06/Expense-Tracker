<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
    <div class="login_full">
        <div class="container">
            <div class="row">

                <div class="col-12 text-center mt-5">
                    <h3>Daily Expense Tracker</h3>
                </div>

                <div class="col-md-4 col-1"></div>

                <div class="col-md-4 col-10 text-center">
                    <form action="/register_user" method="post" class="login_form mb-3" name="pass_check" onsubmit="return checkpass()">
                        <h4>Sign Up</h4>
                        <label class="mt-4">Full Name</label>
                        <input class="mt-2" placeholder="Full Name" type="text" name="user_name" required><br>

                        <label class="mt-2 ms-3">E-mail</label>
                        <input class="mt-1 ms-4" placeholder="E-mail" type="email" name="user_mail" required><br>

                        <label class="mt-2 ms-4">Mobile</label>
                        <input class="mt-1 ms-3" placeholder="Mobile" type="number" name="user_mob" required><br>
                        
                        <label class="mt-2">Password</label>
                        <input class="mt-1 ms-4" placeholder="Password" type="password" name="user_pass" required><br>

                        <label class="mt-2">Repeat Pass</label>
                        <input class="mt-1" placeholder="Re Enter Password" type="password" name="user_repass" required><br>

                        <a href="">
                            <button id="btn_login">Register</button>
                        </a>
                    </form>
                    <a href="/">Login.</a>
                </div>

                <div class="col-md-4"></div>

            </div>
        </div>
      </div>    
    </body>
</html>
<script>
    function checkpass()
    {
        if(document.pass_check.user_pass.value != document.pass_check.user_repass.value)
	    {
		    alert('Password and Confirm Password field does not match');
		    document.pass_check.user_repass.focus();
            return false;
	    }
        return true;
    }
</script>